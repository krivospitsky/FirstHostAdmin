<%= form_for @mailbox, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :user_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_name, :class => 'text_field' %>
      <div class="input-prepend">
      <span class="add-on">@</span>
      <%= f.collection_select :domain_id, Domain.all, :id, :fqdn, {:prompt => 'Select domain'}, {:class=>'span2', :id=>"prependedInput"} %>
      </div>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :password, :class => 'text_field' %>
    </div>
  </div>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                mailboxes_path, :class => 'btn' %>
  </div>
<% end %>
