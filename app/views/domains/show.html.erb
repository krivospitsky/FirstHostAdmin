<%- model_class = @domain.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:fqdn) %>:</strong></dt>
  <dd><%= @domain.fqdn %></dd>
  <dt><strong><%= model_class.human_attribute_name(:alias) %>:</strong></dt>
  <dd><%= @domain.alias %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @domain.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mail_path) %>:</strong></dt>
  <dd><%= @domain.mail_path %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              domains_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_domain_path(@domain), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              domain_path(@domain),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
